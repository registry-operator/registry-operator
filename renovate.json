{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "semanticCommits": "enabled",
  "labels": [
    "area/dependency"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "labels": [
        "area/dependency",
        "do-not-merge"
      ]
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ]
}
