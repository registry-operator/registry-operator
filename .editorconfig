; https://editorconfig.org/
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[boilerplate.go.txt]
insert_final_newline = false

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_size = 4
indent_style = tab

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset

[CNAME]
insert_final_newline = false

[*.py]
indent_size = 4
indent_style = space

[Dockerfile]
indent_size = 4
